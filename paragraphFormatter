var prompt = require('prompt');

  prompt.start();

  prompt.get(['book', 'chapter', 'start_verse', 'end_verse'], function (err, result) {

    console.log('Command-line input received:');
    console.log('book: ' + result.book);
    console.log('chapter: ' + result.chapter);
    console.log('start_verse: ' + result.start_verse);
    console.log('end_verse: ' + result.end_verse;
  });
